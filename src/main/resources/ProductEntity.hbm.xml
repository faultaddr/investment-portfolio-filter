<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.demo.entity.ProductEntity" table="product" schema="invest">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="pinji">
            <column name="pinji" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="shouyilv">
            <column name="shouyilv" sql-type="double" precision="-1" not-null="true"/>
        </property>
        <property name="qixian">
            <column name="qixian" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="jine">
            <column name="jine" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>